<header class="site-header" role="banner">
  <div class="header-container">
    <a href="{% if locale == 'en' %}/{% else %}/{{ locale }}/{% endif %}" class="logo" aria-label="Uvita-Ojochal">
      <img src="{{ '/assets/images/uvita-ojochal-logo-light.png' | url }}" alt="Uvita-Ojochal Logo"></a>
      <div class="language-selector">
        <fieldset>
          <legend>{{ translations[locale].language }}</legend>
          <div class="language-options">
            <label for="lang-en">
              <input type="radio" id="lang-en" name="language" value="en" {% if locale == 'en' %} checked {% endif %}>
                <span>EN</span>
              </label>
              <label for="lang-es">
                <input type="radio" id="lang-es" name="language" value="es" {% if locale == 'es' %} checked {% endif %}>
                  <span>ES</span>
                </label>
              </div>
            </fieldset>
          </div>
          <button class="menu-toggle" aria-expanded="false" aria-controls="primary-navigation" aria-label="Toggle menu">
            <span class="hamburger"></span>
          </button>
          <nav class="primary-nav nav-links" role="navigation">
            <ul>
              <li><a href="{% if locale == 'en' %}/about{% else %}/{{ locale }}/nosotros{% endif %}">{{ translations[locale].nav.about }}</a></li>
              <li><a href="{% if locale == 'en' %}/contact{% else %}/{{ locale }}/contacto{% endif %}">{{ translations[locale].nav.contact }}</a></li>
              <li><a href="{% if locale == 'en' %}/recommendations{% else %}/{{ locale }}/recomendaciones{% endif %}">{{ translations[locale].nav.recommendations }}</a></li>
            </ul>
          </nav>
        </div>
      </header>
